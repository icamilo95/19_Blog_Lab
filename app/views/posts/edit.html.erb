<h1>Posts#edit</h1>
<% if @post.errors.any? %>
   <% @post.errors.full_messages.each do |error|%>
   <p class="text-danger">
      <%= error%>
   </p>
   <% end %>
<% end %>


<%= form_for @post do |f| %>
<%= f.label :title%>
<%= f.text_field :title%>

<%= f.label :body%>
<%= f.text_field :body%>

<%= f.label :category%>
<%= f.text_field :category%>

<%= f.submit "Update Post"%>
<% end %>

<br>

<%= link_to "Delete", @post, method: "DELETE", class:"btn btn-danger" , data:{confirm: "Are you sure you want to delete this post?"} %>



