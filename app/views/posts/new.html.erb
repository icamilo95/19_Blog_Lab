<h1>New Post</h1>
<% if @posts.errors.any? %>
   <% @posts.errors.full_messages.each do |error|%>
   <p class="text-danger">
      <%= error%>
   </p>
   <% end %>
<% end %>


<%= form_for [:author, @posts] do |f| %>


   <%= f.label :title %>
   <%= f.text_field :title, class:"form-control" %>

   <%= f.label :body %>
   <%= f.text_field :body, class:"form-control" %>

   <%= f.label :category %>
   <%= f.text_field :category, class:"form-control" %>
   <br>
   <%= f.submit "Submit", class:"btn btn-success"%>
   <%= link_to "List of Authors", authors_path, class:"btn btn-default" %>

<% end %>