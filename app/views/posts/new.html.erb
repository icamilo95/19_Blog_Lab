<h1>Posts#new</h1>
<% if @posts.errors.any? %>
   <% @posts.errors.full_messages.each do |error|%>
   <p class="text-danger">
      <%= error%>
   </p>
   <% end %>
<% end %>


<%= form_for [:author, @posts] do |f| %>


   <%= f.label :title %>
   <%= f.text_field :title %>

   <%= f.label :body %>
   <%= f.text_field :body %>

   <%= f.label :category %>
   <%= f.text_field :category %>
   
   <%= f.submit "Submit"%>

<% end %>