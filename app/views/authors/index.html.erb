
   <div class="panel panel-default">
      <div class="panel-heading">
         <h3 class="panel-title">List of Authors</h3>
      </div>
      <div class="panel-body">
         <table class="table table-striped table-hover ">
           <thead>
             <tr>
               <th>#</th>
               <th>Name</th>
               <th>List of Posts</th>
             </tr>
           </thead>

            <tbody>
             
               <% c = 0 %>
               <% @authors.each do |author| %>
                  <tr >
                  <td><%=c += 1  %></td>
                  <td><%= link_to author.first_name, edit_author_path(author) %></td>
                  <td><%= link_to "See Posts", author_posts_path(author) %></td>
                  </tr>
               <% end  %>
            </tbody>
         </table> 
         <br>
         <%= button_to "Add new Author", new_author_path , :method => "get", :class => "btn btn-success" %>
      </div>
   </div>


         